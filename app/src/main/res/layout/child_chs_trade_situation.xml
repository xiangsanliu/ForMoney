<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools">
    <data>
        <variable
            name="tradeModel"
            type="org.chengjian.java.feidian.collectdata.beans.TradeInfo1Model"/>
        <variable
            name="editable"
            type="org.chengjian.java.feidian.collectdata.beans.Editable"/>
    </data>

    <android.support.v7.widget.CardView
        app:cardCornerRadius="10dp"
        bind:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/button_trade_situation"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/itemColor3"
                android:elevation="6dp"
                android:foreground="?selectableItemBackground"
                android:gravity="center"
                android:padding="16dp"
                android:text="买卖情况"
                android:textColor="#fff" />

            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/el_trade_situation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:el_duration="500"
                app:el_expanded="false">

                <LinearLayout
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:hint="买方"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputEditText
                            android:text="@={tradeModel.tradeIn}"
                            android:enabled='@{editable.isEditable=="true" ?  true: false}'
                            android:id="@+id/et_trade_in"
                            android:inputType="text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:hint="卖方(开发商)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputEditText
                            android:enabled='@{editable.isEditable=="true" ?  true: false}'
                            android:text="@={tradeModel.tradeOut}"
                            android:id="@+id/et_trade_out"
                            android:inputType="text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <fr.ganfra.materialspinner.MaterialSpinner
                            app:ms_hint="买卖方式"
                            app:ms_hintTextSize="18sp"
                            android:id="@+id/sp_trade_type"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:entries="@array/array_trade_type"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <android.support.design.widget.TextInputLayout
                            android:hint="按揭年限"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <android.support.design.widget.TextInputEditText
                                android:enabled='@{editable.isEditable=="true" ?  true: false}'
                                android:text='@{"" + tradeModel.loanYear}'
                                android:id="@+id/et_load_year"
                                android:inputType="text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:hint="买卖层次"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputEditText
                            android:enabled='@{editable.isEditable=="true" ?  true: false}'
                            android:text="@={tradeModel.tradeLevel}"
                            android:id="@+id/et_trade_level"
                            android:inputType="text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:hint="商品房出售时间"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputEditText
                            android:enabled='@{editable.isEditable=="true" ?  true: false}'
                            android:text="@={tradeModel.tradeTime}"
                            android:id="@+id/et_trade_time"
                            android:inputType="date"
                            android:clickable="true"
                            android:focusableInTouchMode="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:hint="房屋用途"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputEditText
                            android:enabled='@{editable.isEditable=="true" ?  true: false}'
                            android:text="@={tradeModel.useage}"
                            android:id="@+id/et_usage"
                            android:inputType="text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:hint="规划容积率"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputEditText
                            android:enabled='@{editable.isEditable=="true" ?  true: false}'
                            android:text="@={tradeModel.plotRatePlaned}"
                            android:id="@+id/et_plot_rate_planed"
                            android:inputType="text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:hint="卖建面积"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputEditText
                            android:text='@{"" + tradeModel.area}'
                            android:id="@+id/et_area"
                            android:enabled='@{editable.isEditable=="true" ?  true: false}'
                            android:inputType="text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout

                        android:hint="房屋交易总价格"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputEditText
                            android:text='@{"" + tradeModel.price}'
                            android:id="@+id/et_price"
                            android:enabled='@{editable.isEditable=="true" ?  true: false}'
                            android:inputType="text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:hint="分摊土地面积"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputEditText
                            android:text='@{"" + tradeModel.shareLandArea}'
                            android:id="@+id/et_share_land_area"
                            android:enabled='@{editable.isEditable=="true" ?  true: false}'
                            android:inputType="text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </net.cachapa.expandablelayout.ExpandableLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>


</layout>

