<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="sellRentModel"
            type="org.chengjian.java.feidian.collectdata.beans.SellRentModel" />

        <variable
            name="editable"
            type="Boolean" />
    </data>

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="商品房出售调查"
            app:titleTextColor="@color/colorTitle">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="?actionBarSize"
                android:layout_gravity="end">

                <at.markushi.ui.CircleButton
                    android:id="@+id/button_edit"
                    android:layout_width="?actionBarSize"
                    android:layout_height="?actionBarSize"
                    android:src="@drawable/ic_edit_white_24dp"
                    android:visibility='@{editable ?  View.GONE: View.VISIBLE}'
                    app:cb_color="@color/colorPrimary" />

                <at.markushi.ui.CircleButton
                    android:id="@+id/button_delete"
                    android:layout_width="?actionBarSize"
                    android:layout_height="?actionBarSize"
                    android:src="@drawable/ic_delete_white_24dp"
                    android:visibility='@{editable ?  View.GONE: View.VISIBLE}'
                    app:cb_color="@color/colorPrimary" />

                <at.markushi.ui.CircleButton
                    android:id="@+id/button_save"
                    android:layout_width="?actionBarSize"
                    android:layout_height="?actionBarSize"
                    android:src="@drawable/ic_check_white_24dp"
                    android:visibility='@{editable ?  View.VISIBLE: View.GONE}'
                    app:cb_color="@color/colorPrimary" />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include
                    android:id="@+id/child_extra"
                    layout="@layout/child_extra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    bind:editable="@{editable}"
                    bind:extraModel="@={sellRentModel}" />

                <include
                    android:id="@+id/child_land_situation"
                    layout="@layout/child_land_situation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    bind:editable="@{editable}"
                    bind:sellRentModel="@={sellRentModel}" />

                <include
                    android:id="@+id/child_building_situation"
                    layout="@layout/child_building_situation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    bind:editable="@{editable}"
                    bind:sellRentModel="@={sellRentModel}" />

                <include
                    android:id="@+id/child_trade"
                    layout="@layout/child_trade_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    bind:editable="@={editable}"
                    bind:tradeModel="@={sellRentModel.tradeInfo1Model}" />

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

</layout>

