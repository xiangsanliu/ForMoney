<?xml version="1.0" encoding="utf-8"?>


<layout
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="rentModel"
            type="org.chengjian.java.feidian.collectdata.beans.RentInfo4Model"/>
        <variable
            name="editable"
            type="org.chengjian.java.feidian.collectdata.beans.Editable"/>
    </data>

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/button_rent_situation"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:elevation="6dp"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:padding="16dp"
            android:text="出租情况"
            android:textColor="#fff" />

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/el_rent_situation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_duration="500"
            app:el_expanded="false">

            <LinearLayout
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:hint="出租人"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:enabled='@{editable.idEditable ?  true: false}'
                        android:text="@={rentModel.rentOut}"
                        android:id="@+id/et_rent_out"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:hint="承租人"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:enabled='@{editable.idEditable ?  true: false}'
                        android:text="@={rentModel.rentIn}"
                        android:id="@+id/et_rent_in"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:hint="出租方式"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:enabled='@{editable.idEditable ?  true: false}'
                        android:text="@={rentModel.rentType}"
                        android:id="@+id/et_rent_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:hint="定约日期"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:enabled='@{editable.idEditable ?  true: false}'
                        android:text="@={rentModel.appointTime}"
                        android:clickable="true"
                        android:focusableInTouchMode="false"
                        android:id="@+id/et_appoint_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:hint="出租期限"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:enabled='@{editable.idEditable ?  true: false}'
                        android:text="@={rentModel.rentDeadline}"
                        android:id="@+id/et_rent_deadline"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:hint="出租用途"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:enabled='@{editable.idEditable ?  true: false}'
                        android:text="@={rentModel.useage}"
                        android:id="@+id/et_use"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:hint="出租层次"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:enabled='@{editable.idEditable ?  true: false}'
                        android:text="@={rentModel.rentLayer}"
                        android:id="@+id/et_rent_layer"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:hint="出租建筑面积"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:enabled='@{editable.idEditable ?  true: false}'
                        android:text='@{"" + rentModel.buildingArea}'
                        android:id="@+id/et_rent_building_area"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout

                    android:hint="营业面积"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:enabled='@{editable.idEditable ?  true: false}'
                        android:text='@{"" + rentModel.tradeArea}'
                        android:id="@+id/et_trade_area"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:hint="分摊土地面积"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:enabled='@{editable.idEditable ?  true: false}'
                        android:text='@{"" + rentModel.shareLandArea}'
                        android:id="@+id/et_share_land_area"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:hint="月租金"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:enabled='@{editable.idEditable ?  true: false}'
                        android:text='@{"" + rentModel.feeOfMoney}'
                        android:id="@+id/et_fee_of_month"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>


        </net.cachapa.expandablelayout.ExpandableLayout>


    </LinearLayout>

</layout>

