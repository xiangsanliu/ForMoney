<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="tradeModel"
            type="org.chengjian.java.feidian.collectdata.beans.TradeInfo3Model"/>
        <variable
            name="editable"
            type="org.chengjian.java.feidian.collectdata.beans.Editable"/>
    </data>

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/button_trade_situation"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:elevation="6dp"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:padding="16dp"
            android:text="买卖情况"
            android:textColor="#fff" />

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/el_trade_situation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_duration="500"
            app:el_expanded="false">

            <LinearLayout
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:hint="买方"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:text="@={tradeModel.tradeIn}"
                        android:enabled='@{editable.idEditable ?  true: false}'
                        android:id="@+id/et_trade_in"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:hint="卖方"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:text="@={tradeModel.tradeOut}"
                        android:enabled='@{editable.idEditable ?  true: false}'
                        android:id="@+id/et_trade_out"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:hint="买卖方式"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:text="@={tradeModel.tradeLevel}"
                        android:id="@+id/et_trade_type"
                        android:inputType="text"
                        android:enabled='@{editable.idEditable ?  true: false}'
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:hint="买卖时间"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:text="@={tradeModel.tradeTime}"
                        android:id="@+id/et_trade_time"
                        android:clickable="true"
                        android:focusableInTouchMode="false"
                        android:enabled='@{editable.idEditable ?  true: false}'
                        android:inputType="date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:hint="买卖层次"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:text="@={tradeModel.tradeLevel}"
                        android:id="@+id/et_trade_level"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:enabled='@{editable.idEditable ?  true: false}'
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:hint="卖建面积"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:text='@{"" + tradeModel.area}'
                        android:id="@+id/et_area"
                        android:inputType="text"
                        android:enabled='@{editable.idEditable ?  true: false}'
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:hint="分摊土地面积"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:text='@{"" + tradeModel.shareLandArea}'
                        android:id="@+id/et_share_land_area"
                        android:enabled='@{editable.idEditable ?  true: false}'
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:hint="买卖前用途"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:text="@={tradeModel.usageBefore}"
                        android:id="@+id/et_usage_before"
                        android:enabled='@{editable.idEditable ?  true: false}'
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:hint="买卖后用途"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:text="@={tradeModel.usageAfter}"
                        android:id="@+id/et_usage_after"
                        android:enabled='@{editable.idEditable ?  true: false}'
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:hint="房屋交易税费"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:text='@{"" + tradeModel.tax}'
                        android:id="@+id/et_tax"
                        android:enabled='@{editable.idEditable ?  true: false}'
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:hint="房屋交易总价格"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:text='@{"" + tradeModel.price}'
                        android:enabled='@{editable.idEditable ?  true: false}'
                        android:id="@+id/et_price"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>


        </net.cachapa.expandablelayout.ExpandableLayout>


    </LinearLayout>

</layout>

