<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>
        <import type="org.chengjian.java.feidian.collectdata.beans.SellRentModel"/>
        <variable name="sellRentModel" type="SellRentModel"/>
        <variable
            name="editable"
            type="org.chengjian.java.feidian.collectdata.beans.Editable"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|enterAlways"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:title="房屋出租调查"
                app:titleTextColor="@color/colorTitle" >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="?actionBarSize"
                    android:layout_gravity="end">

                    <at.markushi.ui.CircleButton
                        android:id="@+id/button_edit"
                        android:layout_width="?actionBarSize"
                        android:layout_height="?actionBarSize"
                        android:src="@drawable/ic_edit_white_24dp"
                        android:visibility='@{editable.isEditable=="true" ?  View.GONE: View.VISIBLE}'
                        app:cb_color="@color/colorPrimary" />

                    <at.markushi.ui.CircleButton
                        android:id="@+id/button_delete"
                        android:layout_width="?actionBarSize"
                        android:layout_height="?actionBarSize"
                        android:src="@drawable/ic_delete_white_24dp"
                        android:visibility='@{editable.isEditable=="true" ?  View.GONE: View.VISIBLE}'
                        app:cb_color="@color/colorPrimary" />

                    <at.markushi.ui.CircleButton
                        android:id="@+id/button_save"
                        android:layout_width="?actionBarSize"
                        android:layout_height="?actionBarSize"
                        android:src="@drawable/ic_check_white_24dp"
                        android:visibility='@{editable.isEditable=="true" ?  View.VISIBLE: View.GONE}'
                        app:cb_color="@color/colorPrimary" />
                </LinearLayout>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <include
                    android:id="@+id/child_extra"
                    bind:extraModel="@={sellRentModel}"
                    bind:editable="@={editable}"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    layout="@layout/child_extra"/>

                <include
                    android:id="@+id/child_land_situation"
                    bind:sellRentModel="@={sellRentModel}"
                    android:layout_height="wrap_content"
                    bind:editable="@={editable}"
                    android:layout_width="match_parent"
                    layout="@layout/child_land_situation"/>

                <include
                    android:id="@+id/child_building_situation"
                    bind:editable="@={editable}"
                    bind:sellRentModel="@={sellRentModel}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/child_building_situation"/>

                <include
                    android:id="@+id/child_rent"
                    bind:editable="@={editable}"
                    bind:rentModel="@={sellRentModel.RentInfo4Model}"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    layout="@layout/child_rent_4"/>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>


    </android.support.design.widget.CoordinatorLayout>
</layout>

